<script>
    function showSection(sectionId) {
        // Hide all sections
        const sections = document.querySelectorAll('.section');
        sections.forEach(s => s.classList.remove('active'));
        
        // Show target section
        document.getElementById(sectionId).classList.add('active');

        // Update nav buttons
        const buttons = document.querySelectorAll('.nav-btn');
        buttons.forEach(b => b.classList.remove('active'));
        
        // Find the button that calls this function (rough match)
        buttons.forEach(b => {
            if(b.getAttribute('onclick').includes(sectionId)) {
                b.classList.add('active');
            }
        });
    }

    function checkQuiz() {
        const answers = {
            q1: 'b', // RSA
            q2: 'c', // DMZ
            q3: 'b', // Non-repudiation
            q4: 'c', // Least Privilege
            q5: 'd', // Worm
            q6: 'b', // Anomaly
            q7: 'a', // TLS
            q8: 'c', // Inference
            q9: 'c', // Chain of Custody
            q10: 'd' // All
        };

        let score = 0;
        let total = 10;
        const form = document.getElementById('quizForm');
        const formData = new FormData(form);

        for (let [question, correctAnswer] of Object.entries(answers)) {
            const userAnswer = formData.get(question);
            if (userAnswer === correctAnswer) {
                score++;
            }
        }

        const resultDiv = document.getElementById('result');
        resultDiv.style.display = 'block';
        
        if (score >= 7) {
            resultDiv.className = 'result pass';
            resultDiv.innerHTML = `Congratulations! You passed. Score: ${score} / ${total}`;
        } else {
            resultDiv.className = 'result fail';
            resultDiv.innerHTML = `You failed. Please review the material. Score: ${score} / ${total}`;
        }
    }
</script>

